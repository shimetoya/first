puts "Введите 1ю сторону треугольника (а)"
a = gets
puts "Введите 2ю сторону треугольника (b)"
b = gets
puts "Введите 3ю сторону треугольника (с)"
c = gets

a = a.to_i
b = b.to_i
c = c.to_i

if a > b && b > c && a**2 == b**2 + c**2
puts "Треугольник прямоугольный с гипотенузой а: "#{a}"" и катетами b и с соответственно: "#{b , c}". Проверкой служит теорема Пифагора: "

elsif b > a && b > c && b**2 == a**2 + c**2
puts "Треугольник прямоугольный с гипотенузой b: "#{b}"" и катетами a и с соответственно: "#{a , c}". Проверкой служит теорема Пифагора: "


elsif c > a && c > b && (c**2 == (a**2 + b**2))
puts "Треугольник прямоугольный с гипотенузой c: "#{c}"" и катетами a и b соответственно: "#{a , b}". Проверкой служит теорема Пифагора: "
end

 puts "Треугольник равнобедренный" if a == b || b == c || a == c

 puts "Треугольник равносторонний" if a == b && b == c    